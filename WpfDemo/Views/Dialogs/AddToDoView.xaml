<UserControl x:Class="WpfDemo.Views.Dialogs.AddToDoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="450"
             Height="300"
             d:DesignHeight="450"
             d:DesignWidth="280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="添加代办"
                   FontSize="20"
                   Padding="10,20"
                   FontWeight="Bold"></TextBlock>
        <DockPanel Grid.Row="1"
                   LastChildFill="False">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="代办状态"
                           Margin="20,0" />
                <ComboBox Margin="20,0">
                    <ComboBoxItem>待办</ComboBoxItem>
                    <ComboBoxItem>已完成</ComboBoxItem>
                </ComboBox>
                <TextBox Margin="20,0"
                         md:HintAssist.Hint="请输入待办概要"
                         DockPanel.Dock="Top"></TextBox>
                <TextBox Margin="20,0"
                         md:HintAssist.Hint="请输入待办内容"
                         MinHeight="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         DockPanel.Dock="Top"></TextBox>
                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            Grid.Row="2"
                            HorizontalAlignment="Right">
                    <Button Content="取消"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="10,0"></Button>
                    <Button Content="确定"
                            Command="{Binding SaveCommand}"
                            Margin="10,0"></Button>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

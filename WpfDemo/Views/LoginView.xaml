<UserControl x:Class="WpfDemo.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfDemo.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             Width="600"
             Height="350">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Width"
                    Value="600" />
            <Setter Property="Height"
                    Value="350" />
            <Setter Property="SizeToContent"
                    Value="WidthAndHeight" />
            <!--不可设定大小-->
            <Setter Property="ResizeMode"
                    Value="NoResize" />
            <!--弹出时屏幕居中-->
            <Setter Property="prism:Dialog.WindowStartupLocation"
                    Value="CenterOwner" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Source="/Images/login.jpg"
               Margin="50">

        </Image>
        <DockPanel Grid.Column="1"
                   VerticalAlignment="Center"
                   Margin="15">
            <TextBlock Text="欢迎使用"
                       FontSize="22"
                       FontWeight="Bold"
                       DockPanel.Dock="Top"
                       Margin="0,10" />
            <TextBox Text=""
                     md:HintAssist.Hint="请输入用户名"
                     DockPanel.Dock="Top"
                     Margin="0,10" />
            <TextBox Text=""
                     md:HintAssist.Hint="请输入密码"
                     DockPanel.Dock="Top"
                     md:PasswordBoxAssist.IsPasswordRevealed="True"
                     Margin="0,10" />
            <Button Content="登录"
                    DockPanel.Dock="Top"></Button>
            <DockPanel LastChildFill="False"
                       Margin="0,10">
                <TextBlock Text="忘记密码？"
                           FontSize="14"
                           Margin="0,10" />
                <TextBlock Text="注册账号"
                           FontSize="14"
                           DockPanel.Dock="Right"
                           Margin="0,10" />
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
